{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "StepFrameworkConfig": {
            "properties": {
                "projTypes": {
                    "description": "Project types to list in Step by Step",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        }
    },
    "description": "Schema for project config files.",
    "properties": {
        "build": {
            "properties": {
            },
            "type": "object"
        },
        "customTemplates": {
            "description": "An array of paths to read custom templates from",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "disableAnalytics": {
            "description": "IgniteUI CLI sends analytic information by default. The data is completely\nanonymous, but there are times when you might want to disable this behavior.\n\nSetting `disableAnalytics` to true will prevent any data from being sent.",
            "type": "boolean"
        },
        "igPackageRegistry": {
            "description": "Infragistics package registry Url",
            "type": "string"
        },
        "packagesInstalled": {
            "type": "boolean"
        },
        "project": {
            "additionalProperties": {
            },
            "description": "Project options",
            "properties": {
                "components": {
                    "description": "An array of dependencies",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "defaultPort": {
                    "description": "default project serve port",
                    "type": "number"
                },
                "framework": {
                    "type": "string"
                },
                "igniteuiSource": {
                    "description": "Temp",
                    "type": "string"
                },
                "isBundle": {
                    "description": "Flag if the project should be using bundled file",
                    "type": "boolean"
                },
                "isShowcase": {
                    "description": "optional. showcase flag?",
                    "type": "boolean"
                },
                "projectTemplate": {
                    "description": "Stands for the project template from which it has been generated",
                    "type": "string"
                },
                "projectType": {
                    "description": "Stands for js, ts, es6",
                    "type": "string"
                },
                "sourceRoot": {
                    "description": "Project root source directory",
                    "type": "string"
                },
                "theme": {
                    "description": "Theme of the project",
                    "type": "string"
                },
                "themePath": {
                    "type": "string"
                },
                "version": {
                    "description": "Project template version",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "skipGit": {
            "description": "Skip git initialization and commit of the new project",
            "type": "boolean"
        },
        "stepByStep": {
            "description": "Step by step mode configuration",
            "properties": {
                "angular": {
                    "$ref": "#/definitions/StepFrameworkConfig"
                },
                "frameworks": {
                    "description": "Frameworks to list in Step by Step mode",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "jquery": {
                    "$ref": "#/definitions/StepFrameworkConfig"
                },
                "react": {
                    "$ref": "#/definitions/StepFrameworkConfig"
                },
                "web components": {
                    "$ref": "#/definitions/StepFrameworkConfig"
                }
            },
            "type": "object"
        },
        "version": {
            "description": "CLI version used to create the project",
            "type": "string"
        }
    },
    "type": "object"
}

